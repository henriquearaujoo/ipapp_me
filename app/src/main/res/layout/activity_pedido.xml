<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#33b5e5"
        android:id="@+id/linearLayout"
        android:visibility="visible"
        android:weightSum="1"
        android:gravity="end">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btPTransportadora"
            android:drawableLeft="@drawable/ic_truck_white_24dp"
            android:text="Transportadora"
            android:textColor="#ffffffff"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:width="190dp"
            android:visibility="gone"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btPFotos"
            android:drawableLeft="@drawable/ic_camera_white_24dp"
            android:text="Fotos"
            android:textColor="#ffffffff"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:width="180dp"
            android:visibility="gone"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btPEnviarDados"
            android:drawableLeft="@drawable/ic_send_white_24dp"
            android:text="Enviar dados"
            android:textColor="#ffffffff"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:width="180dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btPEstoque"
            android:drawableLeft="@drawable/ic_package_variant_white_24dp"
            android:text="Estoque"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:visibility="gone"
            android:width="180dp" />

    </LinearLayout>

</RelativeLayout>
